  if ($type == 'ajax') {
    if ($channel_id != 0) {
      $commands = array();

      $commands[] = ajax_command_ding_popup(
        'invite_form',
        'Invite to channel',
        drupal_render(drupal_get_form('bpi_channels_invite_form')));

      ajax_deliver(array('#type' => 'ajax', '#commands' => $commands));
    }
  }
}

